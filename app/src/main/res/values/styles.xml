<resources>

    <!-- Base application theme. -->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="Toolbar_MenuItem_WithText" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/menu_txt_color</item>
        <item name="actionMenuTextAppearance">@style/CustomMenuTextAppearance</item>
    </style>

    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">@dimen/fnt_sl</item>
    </style>

    <style name="Toolbar_TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fnt_mm</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DetailLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/fnt_sl</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LabelStyle" parent="DetailLabelStyle">
        <item name="android:textSize">@dimen/fnt_mm</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

</resources>
